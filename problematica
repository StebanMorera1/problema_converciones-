import math

#ayudar a las personas a convertir medidas a otras

print ("----bienvenido al convertidor de grados----")

print("1. Fahrenheit \n2. Celsius \n3. Kelvin")

grados = int(input("--que grado vas a ingresar:2"))


if grados == 1:
    
    print ("1. Celsius \n 2. Kelvin")
    convercion = int(input("----ingrese el valor que decea cambiar----"))#se solicita un numero entero
    
    if convercion == 1:

        fahrenheit = float (input("ingrece los grados"))#se pide un numero que puede ser decimal.

        respuesta = (fahrenheit - 32) * 5/9 
        print (f"{fahrenheit} fahrenheit en celsius son {respuesta}")#se entrega un resultado numerico decimal o entero 
    else:

        fahrenheit = float (input("ingrece los grados"))

        respuesta = ((fahrenheit - 32) * 5/9) + 273.15

        print (f"{fahrenheit} fahrenheit en Kelvin es  {respuesta}")

elif grados == 2:
    
    print ("1. Fahrenheit \n 2. Kelvin")
    convercion = int(input("ingrese el valor que decea cambiar"))
    
    if convercion == 1:

        celsius = float (input("ingrece los grados"))

        respuesta = (celsius * 5/9 ) + 32
        print (f"{celsius} Celsius en Fahrenheit son {respuesta}")
    else:

        celsius = float (input("ingrece los grados"))

        respuesta = celsius + 273.15

        print (f"{celsius} Celsius en Kelvin es  {respuesta}")
elif grados == 3:
    
    print ("1. Fahrenheit \n 2. Celsius")
    convercion = int(input("ingrese el valor que decea cambiar"))
    
    if convercion == 1:

        Kelvin = float (input("ingrece los grados"))

        respuesta = Kelvin - 273.15 
        print (f"{Kelvin} Kelvin en celsius son {respuesta}")
    else:

        kelvin = float (input("ingrece los grados"))

        respuesta = (( kelvin - 273.15) * 5/9) + 32

        print (f"{kelvin} Kelvin en fahrenheit es  {respuesta}")





